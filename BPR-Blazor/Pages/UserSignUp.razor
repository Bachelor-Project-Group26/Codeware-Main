@page "/UserSignUp"
@using BPR_Blazor.Models
<section class="login-form-1 signup">
        <h1>Codeware</h1>
        <div class="container">
            <!-- /form -->
            <div class="login-form-grid">
                <div class="login-main">
                    <div class="login-content">
                        <h2>Create your User Profile</h2>
                        <EditForm Model="@_userDetails" OnValidSubmit="SubmitProfile">
                            <DataAnnotationsValidator />
                            <InputText @bind-Value="@_userDetails.Name" type="text" class="text" name="text" placeholder="Name" required="" autofocus />
                            <InputText @bind-Value="@_userDetails.Email"  type="text" class="text" name="text" placeholder="Email" required="" autofocus />
                            <InputDate @bind-Value="@_userDetails.Birthday" TValue="DateTime"/>
                            <button class="btn" type="submit">Log In</button>
                        </EditForm>
                        
                        <p class="account">Don't have an account? <a href="register">Register</a></p>
                    </div>
                    <div class="login_form align-self">
                        <div class="left_grid_info">
                            <img src="images/signup.webp" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
            <!-- //form -->
        </div>
    </section>
@code {
    private UserDetails _userDetails = new UserDetails();

    private void SubmitProfile()
    {
        Console.Write(_userDetails.Birthday);
    }
}