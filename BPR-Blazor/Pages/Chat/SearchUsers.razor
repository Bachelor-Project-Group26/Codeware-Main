@page "/search"
<section class="index">
    <h2><b>Contacts</b></h2>
    <hr/>
    <div class="col-2 row">
        <EditForm Model = "@filter" OnSubmit="FilterByUser">
        <InputText type="text" class="col-12 form-control dark-theme-textbox"  @bind-Value="filter" @onsubmit="FilterByUser" placeholder="search"/>
        </EditForm>
        @if (filter != null)
         {
            @foreach (var user in toShow)
            {
                <div style="@myStyle">
                    <a href = "/profile/@user.Username" class="position-static list-group-item ">
                        @if (@user.FirstName != null)
                        {
                            @user.FirstName <span> </span> @user.LastName <span> / </span> @user.Username
                        }
                        else
                        {
                            @user.Username
                        }
                    </a>
                    
                </div>
            }   
    }
    else{
        <div style="height: 50px">
                <p>Loading...</p>
            </div>
    }
    </div>
    <br/>

    
</section>

@code{
    private List<UserDTO> allUsers = new List<UserDTO>();
    private List<UserDTO> toShow = new List<UserDTO>();
    private string filter = "";
    private string myStyle= "";
    protected override async Task OnInitializedAsync()
    {
        allUsers = await UserService.GetUsers();
        
    }
    private void FilterByUser(){
        if(filter != null){
            toShow = allUsers.Where(x => x.Username.Contains(filter)).ToList();
        }
        else{
            toShow = allUsers;
        }
    }
     private void FilterByUsername(ChangeEventArgs args)
    {
        string filterByUsername = args.Value.ToString();
        
        if (args.Value.ToString() != null)
        {
            toShow = allUsers.Where(t => t.Username.Contains(filterByUsername)).ToList();
            
        }
        else if(args.Value.ToString() == ""){
            allUsers.Clear();
            toShow.Clear();
            myStyle = "display: none";
        }
    }
}